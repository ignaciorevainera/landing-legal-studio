---
const contactInfo = [
  {
    icon: "location",
    title: "Dirección",
    content:
      "Av. Reforma 2654, Piso 12<br />Colonia Lomas Altas<br />Ciudad de México, 11950",
    iconPath:
      "M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z M15 11a3 3 0 11-6 0 3 3 0 016 0z",
  },
  {
    icon: "phone",
    title: "Teléfonos",
    content:
      'Oficina: <a href="tel:+525555551234" class="text-primary hover:underline">+52 (55) 5555-1234</a><br />Emergencias: <a href="tel:+525555554321" class="text-primary hover:underline">+52 (55) 5555-4321</a>',
    iconPath:
      "M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z",
  },
  {
    icon: "email",
    title: "Correo Electrónico",
    content:
      '<a href="mailto:contacto@estudiojuridicolex.com" class="text-primary hover:underline">contacto@estudiojuridicolex.com</a>',
    iconPath:
      "M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z",
  },
  {
    icon: "clock",
    title: "Horarios",
    content:
      'Lunes a Viernes: 9:00 AM - 7:00 PM<br />Sábados: 10:00 AM - 2:00 PM<br /><span class="text-accent font-semibold">Emergencias 24/7</span>',
    iconPath: "M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z",
  },
];

const servicios = [
  "Derecho Civil",
  "Derecho Corporativo",
  "Derecho Laboral",
  "Derecho Tributario",
  "Derecho Inmobiliario",
  "Derecho de Familia",
  "Derecho Penal",
  "Propiedad Intelectual",
];
---

<section id="contact" class="bg-linear-to-b from-blue-50 to-slate-50 py-12">
  <div class="bg-base-100 m-4 rounded p-8 shadow-2xl">
    <div class="mt-8 mb-10 text-center">
      <h2 class="menu-title mb-2 text-4xl">Contacto</h2>
      <div class="bg-primary mx-auto h-1 w-24"></div>
    </div>
    <div
      class="grid grid-cols-1 gap-6 px-4 sm:grid-cols-2 lg:grid-cols-2 xl:grid-cols-3"
    >
      <p
        class="leading-relaxed text-gray-700 sm:col-span-2 lg:col-span-2 xl:col-span-1"
      >
        Estamos listos para escuchar su caso. Primera consulta sin costo.
      </p>
      {
        contactInfo.map((item) => (
          <div class="flex items-start gap-4">
            <div class="shrink-0 rounded-full bg-blue-100 p-3">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="text-primary h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d={item.iconPath}
                />
              </svg>
            </div>
            <div class="min-w-0 flex-1">
              <h4 class="mb-1 text-lg font-bold">{item.title}</h4>
              <p
                class="wrap-break-word text-gray-600"
                set:html={item.content}
              />
            </div>
          </div>
        ))
      }
    </div>
  </div>

  <div class="m-4 overflow-hidden rounded shadow-2xl">
    <iframe
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d26221.513074257226!2d-58.47484902568363!3d-34.7634229!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95bcd29e202757c3%3A0x426e6d45d6e4ca02!2sDe%20Fazio%20Estudio%20Jur%C3%ADdico%20Penal!5e0!3m2!1ses-419!2sar!4v1764114088005!5m2!1ses-419!2sar"
      class="h-80 w-full border-0"
      allowfullscreen
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"></iframe>
  </div>

  <div class="m-4 rounded-lg bg-white p-8 shadow-xl">
    <h3 class="text-primary mb-6 text-2xl font-bold">Solicitar Consulta</h3>
    <form class="space-y-4">
      <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
        <div>
          <label class="mb-2 block text-sm font-semibold" for="nombre"
            >Nombre Completo *</label
          >
          <input
            type="text"
            id="nombre"
            placeholder="Juan Pérez"
            class="focus:ring-primary w-full rounded-lg border border-gray-300 px-4 py-2 outline-none focus:ring-2"
            required
          />
        </div>
        <div>
          <label class="mb-2 block text-sm font-semibold" for="telefono"
            >Teléfono *</label
          >
          <input
            type="tel"
            id="telefono"
            placeholder="(55) 5555-5555"
            class="focus:ring-primary w-full rounded-lg border border-gray-300 px-4 py-2 outline-none focus:ring-2"
            required
          />
        </div>
      </div>

      <div>
        <label class="mb-2 block text-sm font-semibold" for="email"
          >Correo Electrónico *</label
        >
        <input
          type="email"
          id="email"
          placeholder="correo@ejemplo.com"
          class="focus:ring-primary w-full rounded-lg border border-gray-300 px-4 py-2 outline-none focus:ring-2"
          required
        />
      </div>

      <div>
        <label class="mb-2 block text-sm font-semibold" for="servicio"
          >Tipo de Servicio *</label
        >
        <select
          id="servicio"
          class="focus:ring-primary w-full rounded-lg border border-gray-300 px-4 py-2 outline-none focus:ring-2"
          required
        >
          <option disabled selected>Seleccione un servicio</option>
          {servicios.map((servicio) => <option>{servicio}</option>)}
        </select>
      </div>

      <div>
        <label class="mb-2 block text-sm font-semibold" for="mensaje"
          >Descripción del Caso *</label
        >
        <textarea
          id="mensaje"
          rows="4"
          class="focus:ring-primary w-full rounded-lg border border-gray-300 px-4 py-2 outline-none focus:ring-2"
          placeholder="Describa brevemente su situación legal..."
          required></textarea>
      </div>

      <div class="flex items-start gap-2">
        <input type="checkbox" id="privacidad" class="mt-1" required />
        <label for="privacidad" class="text-sm text-gray-600">
          Acepto el <a href="#" class="text-primary hover:underline"
            >Aviso de Privacidad</a
          > *
        </label>
      </div>

      <button
        type="submit"
        class="bg-primary w-full rounded-lg py-3 font-semibold text-white transition-colors hover:bg-blue-700"
      >
        Enviar Solicitud
      </button>

      <p class="text-center text-sm text-gray-500">
        * Campos obligatorios. Respuesta en 24 horas.
      </p>
    </form>
  </div>
</section>
