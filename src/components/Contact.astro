---
import { Icon } from "astro-icon/components";
import { Picture } from "astro:assets";
import MapsPlaceholder from "@assets/maps-placeholder.png";

const contactInfo = [
  {
    icon: "map-pin-2-fill",
    title: "Dirección",
    content:
      "Calle 123, Piso 4, Colonia Santa Lucía, Ciudad de Lomas de Zamora, 01234",
  },
  {
    icon: "phone-fill",
    title: "Teléfonos",
    content:
      'Oficina: <a href="tel:+525555551234" class="text-primary hover:underline">+52 (55) 5555-1234</a><br />Emergencias: <a href="tel:+525555554321" class="text-primary hover:underline">+52 (55) 5555-4321</a>',
  },
  {
    icon: "mail-fill",
    title: "Correo Electrónico",
    content:
      '<a href="mailto:contacto@estudiojuridicolawfirst.com" class="text-primary hover:underline">contacto@estudiojuridicolawfirst.com</a>',
  },
  {
    icon: "time-fill",
    title: "Horarios",
    content:
      'Lunes a Viernes: 9:00 AM - 7:00 PM Sábados: 10:00 AM - 2:00 PM <span class="text-accent font-semibold">Emergencias 24/7</span>',
  },
];

const services = [
  "Derecho Civil",
  "Derecho Corporativo",
  "Derecho Laboral",
  "Derecho Tributario",
  "Derecho Inmobiliario",
  "Derecho de Familia",
  "Derecho Penal",
  "Propiedad Intelectual",
];
---

<section
  id="contact"
  class="dark:to-base-300 mt-6 flex flex-col rounded-t-xl bg-linear-to-b from-blue-50 to-slate-50 dark:from-slate-700"
  aria-labelledby="contact-heading"
>
  <div class="bg-base-100 m-4 rounded p-8 shadow-2xl">
    <header class="mb-8 px-4 text-center">
      <h2
        id="contact-heading"
        class="mb-4 text-4xl font-extrabold text-balance"
      >
        Contacto
      </h2>
      <div class="bg-primary mx-auto h-1 w-24"></div>
    </header>
    <div
      class="grid grid-cols-1 gap-6 px-4 sm:grid-cols-2 lg:grid-cols-2 xl:grid-cols-3"
      role="list"
    >
      <p
        class="leading-relaxed text-gray-700 sm:col-span-2 lg:col-span-2 xl:col-span-1 dark:text-white"
      >
        Estamos listos para escuchar su caso. Primera consulta sin costo.
      </p>
      {
        contactInfo.map((item) => (
          <div class="flex items-start gap-4" role="listitem">
            <div
              class="shrink-0 rounded-full bg-blue-100 p-3"
              aria-hidden="true"
            >
              <Icon
                name={`ri:${item.icon}`}
                class="text-primary h-6 w-6"
                size={24}
              />
            </div>
            <div class="min-w-0 flex-1">
              <h4 class="mb-1 text-lg font-bold">{item.title}</h4>
              <p
                class="wrap-break-word text-gray-600 dark:text-gray-300"
                set:html={item.content}
              />
            </div>
          </div>
        ))
      }
    </div>
  </div>

  <div class="px-4">
    <Picture
      src={MapsPlaceholder}
      formats={["avif", "webp", "png"]}
      alt="Mapa de ubicación del Estudio Jurídico"
      class="w-full rounded-lg object-cover shadow-lg sm:h-64"
    />
  </div>

  <div class="bg-base-100 m-4 rounded-lg p-8 shadow-xl">
    <h3 class="text-primary mb-6 text-2xl font-bold">Solicitar Consulta</h3>
    <form class="flex flex-col space-y-4" aria-describedby="form-help">
      <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
        <div>
          <label class="mb-2 block text-sm font-semibold" for="nombre">
            Nombre Completo<span class="text-red-600">*</span>
          </label>
          <input
            type="text"
            id="nombre"
            name="nombre"
            placeholder="Juan Pérez"
            class="input input-bordered w-full"
            required
            autocomplete="name"
          />
        </div>
        <div>
          <label class="mb-2 block text-sm font-semibold" for="phone">
            Teléfono<span class="text-red-600">*</span>
          </label>
          <label class="input input-bordered validator w-full">
            <input
              type="tel"
              id="phone"
              name="telefono"
              class="w-full tabular-nums"
              required
              placeholder="5555555555"
              pattern="\d{10}"
              minlength="10"
              maxlength="10"
              aria-describedby="phone-hint"
            />
          </label>
          <div
            id="phone-hint"
            class="validator-hint hidden text-xs text-gray-500"
          >
            El número debe tener 10 dígitos
          </div>
        </div>
        <div>
          <label class="mb-2 block text-sm font-semibold" for="email">
            Correo Electrónico<span class="text-red-600">*</span>
          </label>
          <label class="input input-bordered validator w-full">
            <input
              type="email"
              id="email"
              name="email"
              placeholder="correo@ejemplo.com"
              required
              autocomplete="email"
              aria-describedby="email-hint"
            />
          </label>
          <div
            id="email-hint"
            class="validator-hint hidden text-xs text-gray-500"
          >
            Ingrese una dirección de correo válida
          </div>
        </div>
        <div>
          <label class="mb-2 block text-sm font-semibold" for="service">
            Tipo de Servicio<span class="text-red-600">*</span>
          </label>
          <select
            class="select select-bordered w-full"
            id="service"
            name="servicio"
            required
          >
            <option disabled selected>Seleccione un servicio</option>
            {services.map((service) => <option>{service}</option>)}
          </select>
        </div>
        <div class="md:col-span-2">
          <label class="mb-2 block text-sm font-semibold" for="message">
            Descripción del Caso<span class="text-red-600">*</span>
          </label>
          <textarea
            id="message"
            name="mensaje"
            rows="4"
            class="textarea textarea-bordered w-full"
            placeholder="Describa brevemente su situación legal..."
            required></textarea>
        </div>
      </div>

      <fieldset class="flex items-start gap-2">
        <input
          type="checkbox"
          id="privacidad"
          name="privacidad"
          class="checkbox checkbox-primary checkbox-sm"
          required
        />
        <label
          for="privacidad"
          class="text-sm text-gray-600 dark:text-gray-400"
        >
          Acepto el <a href="#" class="text-primary hover:underline"
            >Aviso de Privacidad</a
          >
          <span class="text-red-600">*</span>
        </label>
      </fieldset>

      <button type="submit" class="btn btn-primary btn-block"
        >Enviar Solicitud</button
      >

      <p
        id="form-help"
        class="text-center text-sm text-gray-500 dark:text-gray-400"
      >
        <span class="text-red-600">* </span>Campos obligatorios. Respuesta en 24
        horas.
      </p>
    </form>
  </div>
</section>
