---
import { Icon } from "astro-icon/components";
import { Picture } from "astro:assets";
import SectionHeader from "@components/shared/SectionHeader.astro";
import MapsPlaceholder from "@assets/maps-placeholder.png";

const contactInfo = [
  {
    icon: "map-pin-2-fill",
    title: "Dirección",
    content:
      "Calle 123, Piso 4, Colonia Santa Lucía, Ciudad de Lomas de Zamora, 01234",
  },
  {
    icon: "phone-fill",
    title: "Teléfonos",
    content:
      'Oficina: <a href="tel:+525555551234" class="text-primary hover:underline">+52 (55) 5555-1234</a><br />',
  },
  {
    icon: "mail-fill",
    title: "Correo Electrónico",
    content:
      '<a href="mailto:contacto@estudiojuridicolawfirst.com" class="text-primary hover:underline">contacto@estudiojuridicolawfirst.com</a>',
  },
  {
    icon: "time-fill",
    title: "Horarios de Atención",
    content:
      'Lunes a Viernes: 9:00 AM - 7:00 PM<br />Sábados: 10:00 AM - 2:00 PM<br /><span class="text-accent font-semibold">Emergencias 24/7</span>',
  },
];

const services = [
  "Derecho Civil",
  "Derecho Corporativo",
  "Derecho Laboral",
  "Derecho Tributario",
  "Derecho Inmobiliario",
  "Derecho de Familia",
  "Derecho Penal",
  "Propiedad Intelectual",
];
---

<section
  id="contact"
  class="from-primary/10 to-secondary/10 mt-6 flex flex-col gap-4 rounded-t-xl bg-linear-to-br py-8 lg:py-16"
  aria-labelledby="contact-heading"
>
  <div
    class="mx-4 grid gap-4 sm:grid-cols-4 lg:mx-auto lg:w-5xl lg:grid-cols-12 xl:w-6xl"
  >
    <div
      class="bg-base-100 rounded p-8 shadow-lg sm:col-span-3 lg:col-span-9 lg:p-12"
    >
      <SectionHeader
        id="contact-heading"
        title="Contacto"
        className="mt-4 mb-10 text-center"
      />

      <div class="mb-8 text-center lg:mb-12">
        <p
          class="leading-relaxed text-gray-700 lg:text-lg xl:text-xl dark:text-white"
        >
          Estamos listos para escuchar su caso. Primera consulta gratuita y sin
          compromiso.
        </p>
      </div>

      <div
        class="grid grid-cols-1 gap-6 px-4 sm:grid-cols-2 lg:gap-8"
        role="list"
      >
        {
          contactInfo.map((item) => (
            <div class="flex items-start gap-4" role="listitem">
              <div
                class="shrink-0 rounded-full bg-blue-100 p-3 lg:p-4"
                aria-hidden="true"
              >
                <Icon
                  name={`ri:${item.icon}`}
                  class="text-primary h-6 w-6 lg:h-7 lg:w-7"
                  size={28}
                />
              </div>
              <div class="min-w-0 flex-1">
                <h4 class="mb-1 text-lg font-bold lg:text-xl">{item.title}</h4>
                <p
                  class="text-sm wrap-break-word text-gray-600 lg:text-base dark:text-gray-300"
                  set:html={item.content}
                />
              </div>
            </div>
          ))
        }
      </div>
    </div>

    <div class="flex items-stretch sm:col-span-1 lg:col-span-3">
      <Picture
        src={MapsPlaceholder}
        formats={["avif", "webp", "png"]}
        alt="Mapa de ubicación del Estudio Jurídico"
        class="w-full rounded-lg object-cover shadow-lg sm:h-full"
      />
    </div>
  </div>

  <div
    class="bg-base-100 mx-4 rounded-lg p-8 shadow-lg lg:mx-auto lg:w-5xl lg:p-12 xl:w-6xl"
  >
    <h3
      class="font-heading text-primary mb-6 text-2xl font-bold lg:mb-8 lg:text-4xl xl:text-5xl"
    >
      Solicitar Consulta
    </h3>
    <form
      class="flex flex-col space-y-4 lg:space-y-6"
      aria-describedby="form-help"
    >
      <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:gap-6 xl:gap-8">
        <div>
          <label
            class="mb-2 block text-sm font-semibold lg:text-base"
            for="nombre"
          >
            Nombre Completo<span class="text-red-600">*</span>
          </label>
          <input
            type="text"
            id="nombre"
            name="nombre"
            placeholder="Ej: Juan Pérez García"
            class="input input-bordered lg:input-lg w-full"
            required
            autocomplete="name"
            aria-required="true"
            aria-invalid="false"
          />
        </div>
        <div>
          <label
            class="mb-2 block text-sm font-semibold lg:text-base"
            for="phone"
          >
            Teléfono<span class="text-red-600">*</span>
          </label>
          <label class="input input-bordered validator lg:input-lg w-full">
            <input
              type="tel"
              id="phone"
              name="telefono"
              class="w-full tabular-nums lg:text-lg"
              required
              placeholder="5555555555"
              pattern="\d{10}"
              minlength="10"
              maxlength="10"
              aria-describedby="phone-hint"
            />
          </label>
          <div
            id="phone-hint"
            class="mt-1 text-xs text-gray-500 dark:text-gray-400"
          >
            Ingrese 10 dígitos sin espacios ni guiones
          </div>
        </div>
        <div>
          <label
            class="mb-2 block text-sm font-semibold lg:text-base"
            for="email"
          >
            Correo Electrónico<span class="text-red-600">*</span>
          </label>
          <label class="input input-bordered validator lg:input-lg w-full">
            <input
              type="email"
              id="email"
              name="email"
              placeholder="correo@ejemplo.com"
              class="w-full lg:text-lg"
              required
              autocomplete="email"
              aria-describedby="email-hint"
            />
          </label>
          <div
            id="email-hint"
            class="mt-1 text-xs text-gray-500 dark:text-gray-400"
          >
            Ejemplo: nombre@dominio.com
          </div>
        </div>
        <div>
          <label
            class="mb-2 block text-sm font-semibold lg:text-base"
            for="service"
          >
            Tipo de Servicio<span class="text-red-600">*</span>
          </label>
          <select
            class="select select-bordered lg:select-lg w-full"
            id="service"
            name="servicio"
            required
          >
            <option disabled selected>Seleccione un servicio</option>
            {services.map((service) => <option>{service}</option>)}
          </select>
        </div>
        <div class="md:col-span-2">
          <label
            class="mb-2 block text-sm font-semibold lg:text-base"
            for="message"
          >
            Descripción del Caso<span class="text-red-600">*</span>
          </label>
          <textarea
            id="message"
            name="mensaje"
            rows="4"
            class="textarea textarea-bordered lg:textarea-lg w-full lg:min-h-32"
            placeholder="Describa brevemente su situación legal..."
            required></textarea>
        </div>
      </div>

      <fieldset class="flex items-start gap-2 lg:gap-3">
        <input
          type="checkbox"
          id="privacidad"
          name="privacidad"
          class="checkbox checkbox-primary checkbox-sm lg:checkbox-md"
          required
        />
        <label
          for="privacidad"
          class="text-sm text-gray-600 lg:text-base dark:text-gray-400"
        >
          Acepto el <a href="#" class="text-primary hover:underline"
            >Aviso de Privacidad</a
          >
          <span class="text-red-600">*</span>
        </label>
      </fieldset>

      <button type="submit" class="btn btn-primary btn-block lg:btn-lg"
        >Enviar Solicitud</button
      >

      <p
        id="form-help"
        class="text-center text-sm text-gray-500 lg:text-base dark:text-gray-400"
      >
        <span class="text-red-600">* </span>Campos obligatorios. Le
        responderemos en un máximo de 24 horas.
      </p>
    </form>
  </div>
</section>
