---
import { Picture } from "astro:assets";
import HeroBackground from "@assets/hero-background.jpg";

const {
  badge = "Excelencia Legal desde 1998",
  title = "Defendemos sus Derechos con Integridad y Profesionalismo",
  description = "Brindamos asesoría legal integral enfocada en resultados. Su tranquilidad es nuestra prioridad. Especialistas en Derecho Corporativo, Civil y Mercantil.",
} = Astro.props;
---

<section
  id="hero"
  role="banner"
  aria-label="Sección principal: estudio jurídico y servicios legales"
>
  <div class="hero min-h-screen">
    <div class="absolute inset-0 -z-10">
      <Picture
        src={HeroBackground}
        formats={["avif", "webp", "jpeg"]}
        alt="Equipo legal revisando documentación en un despacho"
        class={"h-full w-full object-cover"}
      />
      <div
        class="absolute inset-0 bg-linear-to-b from-black/70 via-black/50 to-black/80"
      >
      </div>
    </div>
    <div class="hero-content text-neutral-content text-center">
      <div class="mx-auto max-w-xl px-4 lg:max-w-2xl">
        <div class="badge badge-secondary badge-sm md:badge-md mb-4">
          {badge}
        </div>
        <h1
          class="font-heading mb-6 text-3xl leading-tight font-bold text-pretty md:text-5xl"
        >
          {title}
        </h1>
        <p class="mb-8 text-sm text-pretty md:text-base lg:text-lg">
          {description}
        </p>
        <div class="flex flex-col justify-center gap-4 sm:flex-row">
          <a
            href="#contact"
            class="btn btn-primary md:btn-lg"
            aria-label="Ir a la sección de contacto">Contactar Ahora</a
          >
          <a
            href="#services"
            class="btn btn-secondary btn-soft md:btn-lg"
            aria-label="Ver lista de servicios legales">Nuestros Servicios</a
          >
        </div>
      </div>
    </div>
  </div>
</section>
